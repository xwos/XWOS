{
    "C_Cpp.clang_format_style": "file",
    "editor.tabSize": 8,
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.formatOnPaste": true,
    "files.encoding": "utf8",
    "files.autoGuessEncoding": true,
    "files.trimTrailingWhitespace": true,
    "files.trimFinalNewlines": true,
    "files.associations": {
        "*.h": "c",
        "*.c": "c",
        "*.hpp": "c++",
        "*.cpp": "c++",
        "*.hxx": "c",
        "*.cxx": "c++",
    },
    "files.eol": "\n"
}
